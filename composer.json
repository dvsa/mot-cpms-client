{
    "name": "dvsa/mot-cpms-client",
    "description": "CPMS Common Client Module",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "dvsa/mot-cpms-notifications": "dev-feature-bl-17032-php-82-update",
        "laminas/laminas-mvc": "^3.3.0",
        "laminas/laminas-cache": "^3.10.1",
        "laminas/laminas-log": "^2.13",
        "laminas/laminas-filter": "^2.13",
        "laminas/laminas-dependency-plugin": "^2.6.0",
        "laminas/laminas-cache-storage-adapter-filesystem": "^2.3.0",
        "laminas/laminas-cache-storage-adapter-memory": "^2.2.0",
        "laminas/laminas-cache-storage-adapter-apcu": "^2.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "laminas/laminas-component-installer": "^3.4",
        "laminas/laminas-test": "^4.0.0",
        "captainhook/captainhook": "^5.16",
        "captainhook/plugin-composer": "^5.3",
        "friendsofphp/php-cs-fixer": "^3.17",
        "vimeo/psalm": "^5.24",
        "phpstan/phpstan": "^1.11",
        "squizlabs/php_codesniffer": "^3.7",
        "dvsa/coding-standards": "^2.0"
    },
    "autoload": {
        "psr-0": {
            "CpmsClient\\": "src/",
            "CpmsClientTest\\": "test/"
        },
        "classmap": [
            "./Module.php",
            "./test/CpmsClientTest/Module.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts" : {
        "test": "vendor/bin/phpunit -c phpunit.xml",
        "phpcs": "./vendor/bin/phpcs .",
        "phpcs-fix": "./vendor/bin/phpcbf .",
        "psalm": "./vendor/bin/psalm" ,
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "laminas/laminas-component-installer": true,
            "laminas/laminas-dependency-plugin": true,
            "captainhook/plugin-composer": true
        }
    }
}
